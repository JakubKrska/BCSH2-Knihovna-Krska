<Window x:Class="KrskaKnihovna.Views.CustomersView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Customer" Height="300" Width="400" ResizeMode="NoResize">
    <Grid>
        <!-- Labels -->
        <Label Content="First Name" HorizontalAlignment="Left" Margin="30,20,0,0" VerticalAlignment="Top"/>
        <Label Content="Last Name" HorizontalAlignment="Left" Margin="30,70,0,0" VerticalAlignment="Top"/>
        <Label Content="Phone" HorizontalAlignment="Left" Margin="30,120,0,0" VerticalAlignment="Top"/>
        

        <!-- Input Fields -->
        <TextBox Name="textBoxFirstName" HorizontalAlignment="Left" Margin="140,20,0,0" VerticalAlignment="Top" Width="200" Text="{Binding FirstName}"/>
        <TextBox Name="textBoxLastName" HorizontalAlignment="Left" Margin="140,70,0,0" VerticalAlignment="Top" Width="200" Text="{Binding LastName}"/>
        <TextBox Name="textBoxPhone" HorizontalAlignment="Left" Margin="140,120,0,0" VerticalAlignment="Top" Width="200" Text="{Binding Phone}"/>
        <!-- Buttons -->
        <Button Content="OK" HorizontalAlignment="Left" Margin="140,220,0,0" VerticalAlignment="Top" Width="80" Height="25" Command="{Binding OkCommand}"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="240,220,0,0" VerticalAlignment="Top" Width="80" Height="25" Command="{Binding CancelCommand}"/>
    </Grid>
</Window>
