<Window x:Class="KrskaKnihovna.Views.LibraryBranchView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Library Branch" Height="300" Width="400" ResizeMode="NoResize">
    <Grid>
        <!-- Labels -->
        <Label Content="Branch Name" HorizontalAlignment="Left" Margin="30,16,0,0" VerticalAlignment="Top"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="30,66,0,0" VerticalAlignment="Top"/>
        <Label Content="Phone" HorizontalAlignment="Left" Margin="30,111,0,0" VerticalAlignment="Top"/>

        <!-- Input Fields -->
        <TextBox Name="textBoxBranchName" HorizontalAlignment="Left" Margin="140,20,0,0" VerticalAlignment="Top" Width="200" Text="{Binding BranchName}"/>
        <TextBox Name="textBoxAddress" HorizontalAlignment="Left" Margin="140,70,0,0" VerticalAlignment="Top" Width="200" Text="{Binding BranchAddress}"/>
        <TextBox Name="textBoxPhone" HorizontalAlignment="Left" Margin="140,120,0,0" VerticalAlignment="Top" Width="200" Text="{Binding BranchPhone}"/>

        <!-- Buttons -->
        <Button Content="OK" HorizontalAlignment="Left" Margin="140,180,0,0" VerticalAlignment="Top" Width="80" Height="25" Command="{Binding OkCommand}"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="240,180,0,0" VerticalAlignment="Top" Width="80" Height="25" Command="{Binding CancelCommand}"/>
    </Grid>
</Window>
